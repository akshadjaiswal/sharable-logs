{
  "name": "logshare-desktop",
  "version": "1.0.0",
  "description": "LogShare macOS menubar app for terminal log capture",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --mac --dir",
    "build": "electron-builder --mac"
  },
  "keywords": ["electron", "macos", "terminal", "logs", "menubar"],
  "author": "LogShare",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "electron-store": "^8.1.0",
    "applescript": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.logshare.desktop",
    "productName": "LogShare",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
